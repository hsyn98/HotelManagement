@model IEnumerable<User>

@{
    ViewData["Title"] = "Users";
}
<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Email</th>
            <th scope="col">CreatedDate</th>
            <th scope="col">Gender</th>
            <th scope="col">Status</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.Email</td>
                <td>@user.CreatedDate</td>
                <td>@user.Gender</td>
                <td>@user.Status</td>
                @if (user.Status == UserStatus.Active)
                {
                    <td>
                        <a asp-area="" asp-route-id="@user.Id" asp-controller="user" asp-action="Deactivate">Deactivate</a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-area="" asp-route-id="@user.Id" asp-controller="user" asp-action="Activate">Activate</a>
                    </td>
                }
                <td>
                    <a class="btn btn-primary" asp-action="edit" asp-controller="user" asp-route-id="@user.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>